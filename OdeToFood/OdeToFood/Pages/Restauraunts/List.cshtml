@page
@model OdeToFood.Pages.Restauraunts.ListModel
@{
    ViewData["Title"] = "Restauraunts";
}

<h2>Restauraunts</h2>

<form method="get">
    <div class="form-group">
        <div class="input-group">
            <input type="search" class="form-control"
                   asp-for="SearchTerm" />
            <span class="input-group-btn">
                <button class="btn btn-default">
                    <span class="glpyhicon glyphicon-search"></span>
                </button>
            </span>
        </div>
    </div>
</form>

@foreach (var restauraunt in Model.Restauraunts)
{
    <partial name="_Summary" model="restauraunt" />
}

<a asp-page=".\Edit" class="btn btn-primary">Add New</a>

@section footer  {
    <div>@Model.Message</div>
}